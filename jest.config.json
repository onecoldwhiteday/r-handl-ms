{
  "automock": true,
  "clearMocks": true,
  "coverageDirectory": "coverage",
  "coveragePathIgnorePatterns": [
    "/node_modules/"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts",
    "node"
  ],
  "testEnvironment": "node",

  "testMatch": [
    "**/__test__/**/*.[jt]s?(x)",
    "**/?(*.)+(spec|test).[tj]s?(x)"
  ],

  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
}
